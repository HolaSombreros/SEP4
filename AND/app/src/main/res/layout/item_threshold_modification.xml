<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/thresholdModification_employee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Employee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/thresholdModification_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Area"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/thresholdModification_employee"
        app:layout_constraintStart_toEndOf="@+id/thresholdModification_employee"
        app:layout_constraintTop_toTopOf="@+id/thresholdModification_employee" />

    <TextView
        android:id="@+id/thresholdModification_measurementType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Measurement Type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thresholdModification_employee"
        app:layout_constraintEnd_toStartOf="@id/thresholdModification_minMax"/>

    <TextView
        android:id="@+id/thresholdModification_minMax"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Min/Max"
        app:layout_constraintBottom_toBottomOf="@+id/thresholdModification_measurementType"
        app:layout_constraintStart_toEndOf="@+id/thresholdModification_measurementType"
        app:layout_constraintTop_toTopOf="@+id/thresholdModification_measurementType"
        app:layout_constraintEnd_toStartOf="@id/thresholdModification_oldNew"/>

    <TextView
        android:id="@+id/thresholdModification_oldNew"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="old -> new"
        app:layout_constraintBottom_toBottomOf="@+id/thresholdModification_minMax"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/thresholdModification_minMax"
        app:layout_constraintTop_toTopOf="@+id/thresholdModification_minMax" />

    <View
        android:id="@+id/thresholdModification_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#2c4a78"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thresholdModification_minMax" />

</androidx.constraintlayout.widget.ConstraintLayout>