<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    android:background="@drawable/dummy"
    android:padding="15dp"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    >

   <TextView
       android:id="@+id/areaNameItem"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="4dp"
       android:text="Name"
       android:textColor="#20284e"
       android:textSize="16sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.517" />

   <TextView
       android:id="@+id/barnNameItem"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="84dp"
       android:text="Barn"
       android:textColor="#20284e"
       android:textSize="16sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.551" />

   <TextView
       android:id="@+id/nrOfPigsText"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="188dp"
       android:text="Number of pigs:"
       android:textColor="#20284e"
       android:textSize="16sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.482" />

   <TextView
       android:id="@+id/nrOfPigsItem"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="120dp"
       android:text="No"
       android:textColor="#20284e"
       android:textSize="16sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="@+id/nrOfPigsText"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.466"/>

