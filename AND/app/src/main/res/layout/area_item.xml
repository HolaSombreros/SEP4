<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:background="#d6e1e9"
    android:orientation="horizontal">

   <TextView
       android:id="@+id/areaNameItem"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="16dp"
       android:text="Name"
       android:textSize="16sp"
       android:textColor="#20284e"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:id="@+id/barnNameItem"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="96dp"
       android:text="Barn"
       android:textColor="#20284e"
       android:textSize="16sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.466" />

   <TextView
       android:id="@+id/nrOfPigsText"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="196dp"
       android:text="Number of pigs:"
       android:textColor="#20284e"
       android:textSize="16sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:id="@+id/nrOfPigsItem"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="120dp"
       android:text="No"
       android:textColor="#20284e"
       android:textSize="16sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="@+id/nrOfPigsText"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.466"/>

   <View
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:layout_marginTop="6dp"
       android:background="#2c4a78"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/areaNameItem" />

</androidx.constraintlayout.widget.ConstraintLayout>